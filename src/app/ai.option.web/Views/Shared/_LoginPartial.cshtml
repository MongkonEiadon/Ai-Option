

@using ai.option.web.ViewModels
@model LoginViewModel



<div class="center-vertically">
    <div id="scaleReveal" class="col-sm-8 col-sm-offset-2 col-lg-6 col-lg-offset-3 services-box">
        
        @if (!User.Identity.IsAuthenticated) {
            using (Html.BeginForm("Login", "Account", FormMethod.Post, new {cssClass = "vertical-form sign-in"})) {
                 @Html.AntiForgeryToken()

                 <h5 class="heading-1 mb20">Login</h5>

                 <div class="row">
                     <div class="col-sm-12">
                         <div class="form-group has-error">
                             <div class="controls">
                                 @Html.TextBoxFor(m => m.EmailAddress, new {@class = "form-control", id = "emailAddress", required = true, type = "email"})
                                 @Html.ValidationMessageFor(m => m.EmailAddress)

                             </div>
                         </div>
                     </div><!-- /.column -->

                 </div>

                 <div class="row">
                     <div class="col-sm-12">
                         <div class="form-group has-error">
                             <div class="controls">
                                 @Html.TextBoxFor(m => m.Password, new {@class = "form-control", id = "emailAddress", required = true, type = "password"})
                                 @Html.ValidationMessageFor(m => m.Password)

                             </div>
                         </div>
                     </div><!-- /.column -->

                 </div>

                 <div class="row mb10">

                     <div class="col-sm-6">
                         <div id="msgSubmit" class="h4 hidden mt10 no-margin-bottom"></div>
                     </div><!-- /.column -->
                     <div class="col-sm-6 text-right">
                         <button type="submit" id="submit" class="btn btn-default btn-lg disabled" style="pointer-events: all; cursor: pointer;">Login</button>
                     </div><!-- /.column -->

                 </div>
             }
        }
        else {
            <div class="row">
                <a href="@Url.Action("LogOut", "Account")" class="btn btn1-success btn-lg" role="button" area="">Sign Out</a>
            </div>
        }

    </div>
</div>